@using RecipeBook.ViewModels.Home
@model CreateRecipeViewModel

@{
    ViewData["Title"] = "Create recipe";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="SaveRecipe" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="RecipeName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RecipeName" class="form-control" />
            <span asp-validation-for="RecipeName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RecipeText" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RecipeText" class="form-control" />
            <span asp-validation-for="RecipeText" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>